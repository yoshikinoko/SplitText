{
  "name": "split_text",
  "version": "1.0.0",
  "description": "This is SplitText, an Adobe XD Plugin.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug:install": "npm run deploy",
    "debug:watch": "nodemon -w src -w static -w webpack.config.js -e js,jsx,css,scss,htm,html,json,png,jpg,jpeg -x npm run deploy",
    "start": "npm run debug:watch",
    "clean": "rimraf build/*",
    "build": "npm run clean && npm run validate && webpack --mode development",
    "compile": "npm run clean && npm run validate && webpack --mode production",
    "deploy": "npm run build && xdpm install -o build",
    "package": "npm run compile && xdpm package build",
    "precommit": "lint-staged",
    "validate": "xdpm validate static"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@adobe/xdpm": "^2.0.0",
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "webpack.config.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{css}": [
      "stylelint --fix",
      "git add"
    ],
    "**/*.json": [
      "prettier --write",
      "git add"
    ],
    ".eslintrc": [
      "prettier --write",
      "git add"
    ]
  }
}
